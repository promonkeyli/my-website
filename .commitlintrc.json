{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "test", "chore", "revert"]
    ],
    "type-empty": [2, "never"],
    "scope-enum": [1, "always", ["sys config", "ci"]],
    "scope-empty": [1, "never"]
  }
}
